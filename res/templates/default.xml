<project name="installation-specific-default-values">
  <!-- Database configuration -->
  <property name="sqlserver.host" value="127.0.0.1\\MSSQLSERVER2017" />
  <property name="sqlserver.port" value="1433" />
  <property name="sqlserver.user" value="RiskPro" />
  <property name="sqlserver.db" value="RiskPro" />
  <property name="sqlserver.schema" value="dbo" />
  <property name="sqlserver.password" value="welcome" />
